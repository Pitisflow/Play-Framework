# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)




POST    /recipe                     controllers.RecipeController.createRecipe

GET     /recipe/:recipeID           controllers.RecipeController.retrieveRecipe(recipeID)

GET     /recipes                    controllers.RecipeController.getRecipes

PUT     /recipe/:recipeID           controllers.RecipeController.modifyRecipe(recipeID)

DELETE  /recipe/:recipeID           controllers.RecipeController.deleteRecipe(recipeID)






POST    /user                       controllers.UserController.createUser

GET     /user/:id                   controllers.UserController.retrieveUser(id: Integer)

PUT     /user/:dni                  controllers.UserController.updateUser(dni)

DELETE  /user/:dni                  controllers.UserController.deleteUser(dni)

GET     /users/:page                controllers.UserController.getUserCollection(page: Integer)

GET     /users                      controllers.UserController.getUsersFiltered()





POST    /user/:dni/resetAPIKey      controllers.APIkeyController.resetAPIkey(dni)

POST    /user/:dni/resetPassword/:password    controllers.PasswordController.resetPassword(dni, password)







POST    /login/:dni                 controllers.SessionController.login(dni)

POST    /logout/:dni                controllers.SessionController.logout(dni)


